<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="5dip" />
        <gradient
            android:startColor="@color/LiteGray"
            android:centerColor="@color/LiteGray"
            android:endColor="@color/LiteGray"
            />
    </shape>
</item>


<item
    android:id="@android:id/progress"
    >
    <clip>
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="@color/ParrotGreen"
                android:endColor="@color/ParrotGreen" />
        </shape>
    </clip>
</item>

</layer-list>